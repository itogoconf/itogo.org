<meta name="theme-color" content="#424242">

<style>
    body {
        min-height: 100vh;
        max-height: 100vh;
        font-family: 'Lato', 'Helvetica Neue', Helvetica, Roboto, Arial, sans-serif;
        color: #424242;
        padding: 0;
        margin: 0; }

    a {
        color: #424242;
        text-decoration: none;
        font-weight: bolder;
    }

